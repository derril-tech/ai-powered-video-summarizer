DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# NATS
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=ai-video-summarizer
